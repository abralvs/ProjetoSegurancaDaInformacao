<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20pt"
            android:id="@+id/containerLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10pt">

            <ImageView
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:src="@mipmap/icone_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segurados"
                android:textColor="@color/colorPrimary"
                android:textSize="12pt" />

            <View
                android:layout_width="70pt"
                android:layout_height="1pt"
                android:layout_gravity="center"
                android:layout_marginTop="2pt"
                android:background="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:text="Login"
                android:textColor="@color/colorPrimary"
                android:textSize="12pt" />


            <androidx.cardview.widget.CardView
                android:layout_marginBottom="2pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:elevation="10pt"
                app:cardCornerRadius="5pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10pt">

                    <AutoCompleteTextView
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />


                    <EditText
                        android:id="@+id/edtSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:hint="@string/prompt_password"
                        android:imeActionId="6"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <CheckBox
                        android:id="@+id/chk_mostrar_senha_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mostrar senha"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/msgErro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email ou Senha incorreto"
                        android:textColor="#ff0000"
                        android:textSize="8pt"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/btnEntrar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:background="@color/colorPrimary"
                        android:text="Entrar"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5pt"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btnEsqueciSenha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="2"
                            android:background="@android:color/transparent"
                            android:gravity="end"
                            android:text="esqueci minha senha"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimary" />

                        <Button
                            android:id="@+id/btnCadastro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="2"
                            android:background="@android:color/transparent"
                            android:gravity="end"
                            android:text="Cadastre-se"
                            android:textColor="@color/colorPrimary" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/containerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>